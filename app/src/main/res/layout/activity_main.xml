<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@drawable/back">

    <RelativeLayout
        android:id="@+id/new_adw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.7"></ImageView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/main">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Нове Оголошення"
                    android:textSize="25dp"
                    android:textColor="@color/main_purple"
                    android:textStyle=""
                    android:layout_marginTop="5dp"
                    android:textAllCaps="true"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/first_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/second_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/third_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/forth_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/scroll"
                    app:cardCornerRadius="30dp"

                    app:cardBackgroundColor="@color/main">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@id/scroll"
                        android:layout_margin="16dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cancel"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="10dp"
                            android:layout_below="@+id/desccard"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Скасувати"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/white"></TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/send_button"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@color/purple"
                            app:cardCornerRadius="10dp"
                            android:layout_below="@+id/desccard"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Опублікувати"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/white"></TextView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <ScrollView
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="-20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/namecard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Назва оголошення"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/name_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Назва"
                                android:background="@null"
                                android:maxLength="20"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/lockcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/namecard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Місце знаходження"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/location_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Адреса"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/roomcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lockcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Площа, к-сть кімнат"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:inputType="number"
                                android:id="@+id/area_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Площа"
                                android:background="@null"></EditText>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="90dp"
                                android:layout_marginLeft="30dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:inputType="number"
                                android:id="@+id/roomcount_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="80dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Кількість кімнат"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/floorcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/roomcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Поверх"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/floor_edit"
                                android:inputType="number"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Поверх"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/helpcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/floorcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Допомога біженцям?"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/elp_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Так/Ні"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rentcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/helpcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Орендна плата"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:inputType="number"
                                android:id="@+id/price_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Орендна плата"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/desccard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rentcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Додаткова інформація"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/description_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Опис Оголошення"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                    </RelativeLayout>
                </ScrollView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_show"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-15dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/line_menu"
            android:layout_marginLeft="20dp"
            android:tint="#7d6bc5"></ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_alignLeft="@+id/menu_show"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp"
                android:hint="Пошук"
                android:background="@null"></EditText>

            <ImageView
                android:tint="@color/purpleforicons"
                android:id="@+id/lup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="52dp"
                android:src="@drawable/search"></ImageView>

            <ImageView
                android:id="@+id/sett"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/sett"
                android:tint="@color/purpleforicons"></ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/topPanel"
        android:id="@+id/recycler"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spanCount="2"></androidx.recyclerview.widget.RecyclerView>



    <androidx.cardview.widget.CardView
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="-40dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/mainimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home"
            android:tint="@color/purpleforicons"
            android:layout_marginRight="30dp"></ImageView>
        <androidx.cardview.widget.CardView
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"></ImageView>
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/addimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/plus"
                android:tint="@color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/likedimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bookmark"
            android:tint="@color/purpleforicons"></ImageView>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="70dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@drawable/gradient"></ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menu"
        android:visibility="invisible"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="-30dp"
        app:cardBackgroundColor="#7d6bc5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navback"
            android:alpha="0.6"></ImageView>
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/user"
                        android:layout_margin="20dp"
                        android:tint="#7d6bc5"></ImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/ur_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins"
                android:text="HashNova"
                android:textStyle="bold"
                android:layout_marginTop="205dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/ur_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins"
                android:text="+380975347314"
                android:layout_marginTop="240dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
