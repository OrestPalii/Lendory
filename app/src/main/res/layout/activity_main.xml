<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">

    <androidx.cardview.widget.CardView
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp"
                android:hint="Пошук"
                android:background="@null"></EditText>
            <ImageView
                android:src="@drawable/search"
                android:id="@+id/lup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="52dp"></ImageView>
            <ImageView
                android:src="@drawable/sett"
                android:id="@+id/sett"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"></ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="100dp"
        android:layout_below="@+id/topPanel"
        android:id="@+id/recycler"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spanCount="2"></androidx.recyclerview.widget.RecyclerView>

        <androidx.cardview.widget.CardView
            android:id="@+id/new_adw"
            android:visibility="invisible"
            android:layout_below="@id/topPanel"
            android:layout_marginBottom="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/main">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/first_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/second_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/third_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/forth_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus"></ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Нове Оголошення"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    ></TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel"
                    android:layout_width="152dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Скасувати"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"></TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/send_button"
                    android:layout_width="152dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/purple"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Опублікувати"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"></TextView>
                </androidx.cardview.widget.CardView>
                <EditText
                    android:id="@+id/name_edit"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="135dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Заголовок оголошення"></EditText>
                <EditText
                    android:id="@+id/description_edit"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="175dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Опис оголошення"></EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">
        <ImageView
            android:id="@+id/mainimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/home"
            android:tint="@color/main_purple"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Головна"
                android:layout_below="@+id/mainimage"
                android:textColor="@color/main_purple"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/liked"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/likedimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/bookmark"
                android:tint="@color/main_purple"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вподобане"
                android:layout_below="@+id/likedimage"
                android:textColor="@color/main_purple"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/addimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/plus"
                android:tint="@color/main_purple"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Створити"
                android:layout_below="@+id/addimage"
                android:textColor="@color/main_purple"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/user"
                android:tint="@color/main_purple"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профіль"
                android:layout_below="@+id/profileimage"
                android:textColor="@color/main_purple"></TextView>
        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp"
        android:layout_marginLeft="-30dp"
        app:cardBackgroundColor="#7d6bc5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navback"
            android:alpha="0.6"></ImageView>
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/user"
                        android:layout_margin="20dp"
                        android:tint="#7d6bc5"></ImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins"
                android:text="HashNova"
                android:textStyle="bold"
                android:layout_marginTop="205dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins"
                android:text="+380975347314"
                android:layout_marginTop="240dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="35dp"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logout"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Вихід"
                        android:layout_marginTop="11dp"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:textColor="#7d6bc5"></TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="105dp"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/settings"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Налаштування"
                        android:layout_marginTop="11dp"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:textColor="#7d6bc5"></TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sett"
                    android:layout_margin="5dp"
                    android:tint="#7d6bc5"></ImageView>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>