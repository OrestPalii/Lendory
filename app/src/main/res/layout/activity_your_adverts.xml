<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.YourAdverts"
    android:background="#cbe5e4">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/waves"
        android:scaleType="centerCrop"
        android:tint="#87b7b7"></ImageView>
    <androidx.cardview.widget.CardView
        android:id="@+id/backcard"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_arrow"
            android:tint="#7d6bc5"></ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_alignLeft="@+id/backcard"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        app:cardBackgroundColor="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ваші Оголошення"
            android:textColor="@color/purpleforicons"
            android:gravity="center"
            android:textSize="20dp"></TextView>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/new_adw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.7"></ImageView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Нове Оголошення"
                    android:textSize="25dp"
                    android:textColor="@color/main_purple"
                    android:textStyle=""
                    android:layout_marginTop="5dp"
                    android:textAllCaps="true"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/first_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/second_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/third_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/forth_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_img"></ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/scroll"
                    app:cardCornerRadius="30dp"

                    app:cardBackgroundColor="@color/main">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@id/scroll"
                        android:layout_margin="16dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cancel"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="10dp"
                            android:layout_below="@+id/desccard"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Скасувати"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/white"></TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/send_button"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@color/purple"
                            app:cardCornerRadius="10dp"
                            android:layout_below="@+id/desccard"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Опублікувати"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/white"></TextView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <ScrollView
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="-20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/namecard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Назва оголошення"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/name_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Назва"
                                android:background="@null"
                                android:maxLength="20"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/lockcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/namecard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Місце знаходження"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/location_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Адреса"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/roomcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lockcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Площа, к-сть кімнат"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:inputType="number"
                                android:id="@+id/area_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Площа"
                                android:background="@null"></EditText>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="90dp"
                                android:layout_marginLeft="30dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:inputType="number"
                                android:id="@+id/roomcount_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="80dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Кількість кімнат"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/floorcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/roomcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Поверх"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/floor_edit"
                                android:inputType="number"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Поверх"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/desccard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/floorcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Додаткова інформація"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:id="@+id/description_edit"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Опис Оголошення"
                                android:background="@null"></EditText>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/helpcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desccard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Допомога біженцям?"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <RadioGroup
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                                <RadioButton
                                    android:id="@+id/yesrad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Так"
                                    android:textSize="20dp"></RadioButton>
                                <RadioButton
                                    android:id="@+id/norad"
                                    android:checked="true"
                                    android:layout_marginTop="-40dp"
                                    android:layout_marginLeft="80dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Ні"
                                    android:textSize="20dp"></RadioButton>
                            </RadioGroup>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rentcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/helpcard"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"
                                    android:text="Орендна плата"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"></TextView>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/lvl"
                                android:layout_marginTop="55dp"
                                android:layout_marginLeft="10dp"
                                android:tint="#a5a5a1"></ImageView>
                            <EditText
                                android:inputType="number"
                                android:id="@+id/price_edit"
                                android:layout_marginRight="65dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Орендна плата"
                                android:background="@null"></EditText>
                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="45dp"
                                android:layout_alignParentRight="true"
                                app:cardCornerRadius="15dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient"></ImageView>

                                <TextView
                                    android:id="@+id/currency"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="₴"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </RelativeLayout>
                </ScrollView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spanCount="2"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        android:paddingTop="60dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>