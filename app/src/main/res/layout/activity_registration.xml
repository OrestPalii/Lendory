<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Registration"
    android:background="@drawable/regbutton"
    android:id="@+id/reglayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/login">
        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/purpleforicons"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/reggrad"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Номер телефону"
                android:textSize="22dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="75dp"
                app:cardCornerRadius="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/loginphonenumber"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@null"></EditText>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:textSize="22dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/white"></TextView>
            <androidx.cardview.widget.CardView
                android:id="@+id/logpasscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="140dp"
                app:cardCornerRadius="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/loginpassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@null"></EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/logn_but"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_below="@id/logpasscard"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="18dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Увійти"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:textColor="@color/purpleforicons"></TextView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/regtext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Зареєструватись"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_below="@id/logn_but"
                android:textColor="@color/white"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="500dp"
            android:elevation="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:src="@drawable/user"
                android:tint="@color/purpleforicons"></ImageView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/register">
        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/purpleforicons"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="25dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reggrad"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Прізвище Ім'я"
            android:textSize="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="95dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/reg_name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"></EditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Номер телефону"
            android:textSize="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="130dp"
            android:textColor="@color/white"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="165dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/regphonenumber"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"></EditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пароль"
            android:textSize="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/white"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/regpasscard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="235dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/regpassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"></EditText>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/reg_but"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/regpasscard"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="18dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Зареєструватись"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/purpleforicons"></TextView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/logtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/reg_but"
            android:gravity="center"
            android:text="У мене вже є акаунт"
            android:textColor="@color/white"
            android:textSize="16dp"></TextView>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="500dp"
            android:elevation="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:src="@drawable/user"
                android:tint="@color/purpleforicons"></ImageView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reggrad"
            android:rotation="180"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Увійти як гість"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="20dp"></TextView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>